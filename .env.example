APP_NAME="Darasa360 Finance ERP"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yoursubdomain.yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Primary Database Connection (Tenant/School Data)
DB_CONNECTION=mysql
DB_HOST=your-evolution-database-host
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_username
DB_PASSWORD=your_secure_password

# Central Database (SuperAdmin, Schools, Activity Logs)
# This database stores multi-tenant management data
CENTRAL_DB_DATABASE=darasa_central

# Tenant Database (optional, defaults to DB_DATABASE)
# Usually the same as DB_DATABASE for single-school setups
TENANT_DB_DATABASE=your_database_name

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# SMS Configuration (messaging-service.co.tz)
SMS_API_TOKEN=your_sms_api_token
SMS_SENDER_NAME="DARASA 360"
